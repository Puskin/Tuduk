<% if signed_in? %>

  <div class="container">
    <%= link_to "Tuduk", root_path, :class => "brand" %>
    <ul class="nav pull-left">
      <li<%=" class='active'" if action_name == 'home'%>><%= link_to "Dashboard", root_path %>
    </ul>

    <ul class="nav pull-right">
      <li class="dropdown">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
          <%= "#{current_user.name}" %>
          <b class="caret"></b>
        </a>
        <ul class="dropdown-menu">
          <li><%= link_to "Profile", user_path(current_user) %>
          <li><%= link_to "Settings", edit_user_path(current_user) %>
          <li class="divider"></li>
          <li><%= link_to "Sign out", signout_path, method: "delete" %>
        </ul>
      </li>
    </ul>

    <%= form_tag root_path, :method => 'get', :class => "navbar-search pull-right" do %>
      <%= text_field_tag :search, params[:search], :class => "search-query", :placeholder => "Search" %>
    <% end %>

  </div>

<% else %>

  <div class="container">
    <%= link_to "Tuduk", root_path, :class => "brand" %>
    
    <ul class="nav">
        <li><%= link_to "Home", root_path %></li>
        <li><%= link_to "About", about_path %></li>
        <% unless signed_in? %>
          <li><%= link_to "Sign in", signin_path %></li>
          <li><%= link_to "Sign up", signup_path %></li>
        <% end %>
    </ul>

  </div>

<% end %>